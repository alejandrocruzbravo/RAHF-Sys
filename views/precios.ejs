<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="shortcut icon" href="/icons/favicon.png" type="image/x-icon">
    <title>Precios - RAFH</title>
    <link rel="stylesheet" href="/bulma/bulma.min.css">
    <link rel="stylesheet" type="text/css" href="/styles/precios.css">
</head>

<body>
    <%- include('components/navbar') %>

        <!-- Header -->
        <section class="custom-section-first">
            <div class="custom-sf-div">
                <div class="container has-text-centered">
                    <h1
                        class="custom-family-text has-text-white has-text-center-desktop is-size-2-mobile is-size-1-tablet is-size-1-desktop is-size-1-fullhd">
                        PRECIOS
                    </h1>
                    <h2
                        class="custom-subtitle has-text-center-desktop is-size-5-mobile is-size-3-tablet is-size-3-desktop is-size-3-fullhd">
                        RAFH System
                    </h2>
                </div>
            </div>
        </section>

        <!-- Planes de Precios -->
        <section class="section">
            <div class="container">
                <h2 class="title is-2 has-text-centered mb-6">Nuestros Planes</h2>

                <div class="columns is-centered">
                    <!-- Plan Básico -->
                    <div class="column is-one-third">
                        <div class="price-card with-border">
                            <div class="price-header">
                                <h3 class="title is-3">Básico</h3>
                                <p class="price">$999<span>/mes</span></p>
                            </div>
                            <div class="price-features">
                                <ul>
                                    <li>
                                        <span class="icon-verify"></span>
                                        Gestión básica de inventario
                                    </li>
                                    <li>
                                        <span class="icon-verify"></span>
                                        Hasta 1000 registros
                                    </li>
                                    <li>
                                        <span class="icon-verify"></span>
                                        Soporte por email
                                    </li>
                                    <li>
                                        <span class="icon-verify"></span>
                                        Reportes básicos
                                    </li>
                                </ul>
                            </div>
                            <button class="button is-link is-fullwidth">Seleccionar Plan</button>
                        </div>
                    </div>

                    <!-- Plan Pro -->
                    <div class="column is-one-third">
                        <div class="price-card is-featured">
                            <div class="featured-label">Más Popular</div>
                            <div class="price-header">
                                <h3 class="title is-3">Profesional</h3>
                                <p class="price">$1,999<span>/mes</span></p>
                            </div>
                            <div class="price-features">
                                <ul>
                                    <li>
                                        <span class="icon-verify"></span>
                                        Todo lo del plan Básico
                                    </li>
                                    <li>
                                        <span class="icon-verify"></span>
                                        Hasta 5000 registros
                                    </li>
                                    <li>
                                        <span class="icon-verify"></span>
                                        Soporte prioritario 24/7
                                    </li>
                                    <li>
                                        <span class="icon-verify"></span>
                                        Reportes avanzados
                                    </li>
                                    <li>
                                        <span class="icon-verify"></span>
                                        API access
                                    </li>
                                </ul>
                            </div>
                            <button class="button is-link is-fullwidth">Seleccionar Plan</button>
                        </div>
                    </div>

                    <!-- Plan Enterprise -->
                    <div class="column is-one-third">
                        <div class="price-card with-border">
                            <div class="price-header">
                                <h3 class="title is-3">Enterprise</h3>
                                <p class="price">$3,999<span>/mes</span></p>
                            </div>
                            <div class="price-features">
                                <ul>
                                    <li>
                                        <span class="icon-verify"></span>
                                        Todo lo del plan Profesional
                                    </li>
                                    <li>
                                        <span class="icon-verify"></span>
                                        Registros ilimitados
                                    </li>
                                    <li>
                                        <span class="icon-verify"></span>
                                        Soporte dedicado
                                    </li>
                                    <li>
                                        <span class="icon-verify"></span>
                                        Personalización completa
                                    </li>
                                    <li>
                                        <span class="icon-verify"></span>
                                        Implementación guiada
                                    </li>
                                </ul>
                            </div>
                            <button class="button is-link is-fullwidth">Contactar Ventas</button>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <footer class="footer">
            <div class="content has-text-centered">
                <p>
                    <strong>RAFH System</strong> © 2024. Todos los derechos reservados.
                </p>
            </div>
        </footer>

        <script async type="text/javascript" src="/js/bulma.js"></script>
</body>

</html>